<% @edge_types.each do |edge_type| %>
  <tr>
    <td><%= edge_type.name %></td>
    <td><%= edge_type.source_type %></td>
    <td><%= edge_type.sink_type %></td>
    <td><%= edge_type.description %></td>
    <td><%= link_to 'Show', edge_type %></td>
    <td><%= link_to 'Edit', edit_edge_type_path(edge_type) %></td>
    <td><%= link_to 'Destroy', edge_type, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

